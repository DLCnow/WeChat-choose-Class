/*我的招工  */
/*我的招工列表一  */
.table_zg1{
    float: left;
    width: 700rpx;
    height: 230rpx;
    margin-top: 60rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
    box-shadow: #e4ebf3 -1px 5px 6px;
}
.table_zg1 .table{
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.table_zg1 dl image{
  float: left;
  width: 170rpx;
  height: 170rpx;
  border-radius: 10rpx;
}
.table_zg1 .table_details{
  float: left;
  font-size: 25rpx;
  line-height: 45rpx;
  margin-left: 20rpx;
}
/*溢出处理  */
.table_zg1 .title{
  font-size: 30rpx;
  overflow: hidden;
  height: 40rpx;
  width: 300rpx;
}
.table_zg1 span{
  color: #54a3f1;
}
.table_zg1 .xq_text{
  float: right;
  font-size: 25rpx;
  margin-top: 140rpx;
  color: #54a3f1;
  margin-right: -30rpx;
}
.table_zg1 .img image{
  float: right;
  margin-right: 28rpx;
  margin-top: 50rpx;
  width: 15rpx;
  height: 25rpx;
}

