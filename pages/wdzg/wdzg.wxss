.sim-window{
  display: none;
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 60%;
  width: 60%;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  
}

.sim-img{
  height: 100px;
  width: 200px;
}

.sim-text{
  color: #959595;
  font-size: 22px;
  text-align: center;
}

.sim-button{
  color: #fff;
  background-color: #54a3f1;
  padding: 8px 40px;
  border-radius: 3px;
}