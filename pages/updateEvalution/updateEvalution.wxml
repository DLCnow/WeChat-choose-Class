<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd">
        <view class="page__title">答辩论文评分-评论</view>
         <view class="page__desc">{{warnStr}}</view> 
    </view>
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">论文评分</view>
                </view>
                <view class="weui-cell__bd">
                    <input bindinput="bindScore" class="weui-input" value="{{score}}" placeholder="请输入答辩论文评分"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">论文评论</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindComment" value="{{comment}}" placeholder="请输入答辩论文评论"/>
                </view>
            </view>


                 </view>
            <view class="weui-btn-area">
                        <button class="weui-btn"  disabled='{{!isSubmitAble}}'  type="primary" bindtap="showTopTips">确定</button>
            </view>



        



     
    </view>
</view>