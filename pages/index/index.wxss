/*公告  */
.affiche{
  position: relative;
  overflow: hidden;
  float: left;
  width: 100%;
  height: 60rpx;
  background-color: white;
  margin-top: 15rpx;
}
.affiche_text{
  animation:myfirst 20s linear infinite;
  align-content: center;
  font-size: 25rpx;
  line-height: 60rpx;
  margin-left: 40rpx;
}
@keyframes myfirst
{
  0%   {margin-left:750rpx;}
  100% {margin-left:-1500rpx;}
}
