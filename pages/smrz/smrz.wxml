<form bindsubmit="formSubmit" report-submit="true" bindreset="formReset">
<!--实名认证  -->
<view class='smrz'>
    <!--姓名  -->
    <view class='name'>
        <view class='nm'>姓名</view>
        <input class='p_nm input-box'  placeholder="输入姓名" value='{{name}}' bindinput="bindName"></input>
    </view>
    <!--手机号  -->
    <view class='phone'>
        <view class='pn'>手机号</view>
        <input class='p_pn input-box' placeholder="输入手机号" value='{{phone}}' bindinput="bindPhone"></input>
    </view>
    <!-- 验证码 -->
    <view class='phone'>
        <view class='pn'>验证码</view>
        <input class='yzm input-box' style="width:300rpx;display:inline-block;" placeholder="验证码" value='{{code}}' bindinput="bindCode"></input>
        <button class="btn-code" bindtap='getVerifyCode'>获取验证码</button>
    </view>
</view>
<!--<button class='btn2' bindtap='doSave'>保存</button>-->
<button class='btn2' formType="submit">保存</button>
</form>