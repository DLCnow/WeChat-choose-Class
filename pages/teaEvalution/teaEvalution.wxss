.function-box {
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
  margin: 1rem 1rem;
  border-radius: 20rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 1rem 1rem;
  background-color: #fff;
}
.function-box>view{
  text-align: left;
  display: block;
  margin-bottom: 10px;
}
.function-box b{
 color: #53b77b;
}



.fun-left{
  text-align: left;
  display: flex;
  flex-direction: column-reverse; 
  justify-content: space-around;
}
.fun-left image{
  height: 1rem;
  width: 1rem;
  margin-right: 20rpx;
}
.fun-right view{
  text-align: right;
}

.actor{
  display: flex;
  align-items: center;

}

.actor image{
  height: 1rem;
  width: 1rem;
  margin-right: 20rpx;
}

.page_btn{
  padding: 5px 10px;
  background-color:#53b77b;
  color: #fff;
  width: 8rem;
  margin-top: 1rem;
  border-radius: 5px;
}