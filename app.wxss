/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.side-tool{
  position: fixed;
  bottom: 150rpx;
  right: 40rpx;
  z-index: 5;
  width: 100rpx;
  height: 100rpx;

}


.content-list{
    position: relative;
    padding-top: 2rpx;
    padding-bottom: 2rpx;
    padding-left: 0;
    margin-bottom: 40rpx;
    background-color:#f7f7f7;
    margin-top: 80rpx;
}

.item{
    /**border-color: #eee;
    border-width: 2rpx;
    border-style: solid;
    margin: -2rpx;**/
    margin: 8rpx 20rpx;
    /* border:2rpx solid #e5e5e5; */
    box-shadow: 5px 5px 5px rgba(0,0,0,.2);
    border-radius: 8rpx;
    background-color: #fff;
    color: #444;
    position: relative;
    z-index: 0;
    display: block;
    padding: 32rpx;
    font-size: 32rpx;
    margin-bottom: 20rpx !important; 
    overflow: hidden;
}

.item .title{
  overflow: hidden;
    padding: 8rpx;
    line-height: 40rpx;
    color: #444444;
    margin: 0rpx;
    margin-bottom: 12rpx;
}

.item .desc{
    font-weight: normal;
    padding: 8rpx;
    line-height: 32rpx;
    color: #888;
    margin: 0rpx;
    font-size: 28rpx;
}

.item .img-v{
  right: 40rpx;
  top: 0rpx;
  position: absolute;
  height: 100%;
  align-items: center;
  display: flex;
}

.img-v .img{
  width: 25rpx;
  height: 45rpx;
}

.oddBgColor {
  background: #F0F9FF;
}

.input-box {
  border:1rpx solid #a09d9d;
  border-radius:10rpx;
  padding:6rpx 8rpx;
  font-size:0.6rem !important;
  font-family:"微软雅黑";
}

